<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ABMFitness</title>
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/entypo.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/socicon.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ABMFitness.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ABMFitness</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="user" asp-action="Index">Find Others</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Club" asp-action="Index">Find Clubs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Routine" asp-action="Index">Find Routines</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <ul class="navbar-nav">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown">Dashboard</a>
                                    <div class="dropdown-menu" aria-labelledby="pagesDropdown">

                                        <a class="dropdown-item" asp-area="" asp-controller="Club" asp-action="Create">
                                            <span class="h6 mb-0">Create Club</span>
                                        </a>

                                        <div class="dropdown-divider"></div>

                                        <a class="dropdown-item" asp-area="" asp-controller="Routine" asp-action="Create">
                                            <span class="h6 mb-0">Create Routine</span>
                                        </a>

                                        <div class="dropdown-divider"></div>

                                        <a class="dropdown-item" asp-area="" asp-controller="Dashboard" asp-action="EditUserProfile">
                                            <span class="h6 mb-0">Edit User Profile</span>
                                        </a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" asp-area="" asp-controller="Dashboard" asp-action="Index">
                                            <span class="h6 mb-0">Manage Your Clubs/Routines</span>
                                        </a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">
                                            <span su class="h6 mb-0">Logout</span>
                                        </a>
                                    </div>
                                </li>
                            </ul>
                        }
                        else
                        {
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="Account"
                                   asp-action="Register">Sign up</a>
                                    <span>&nbsp;or&nbsp;</span><a asp-area="" asp-controller="Account"
                                                              asp-action="Login">Sign in</a>
                                </li>
                            </ul>
                        }

                </div>
                <!--end nav collapse-->
        </nav>
        </div>
        <!--end of container-->
        </div>
        </div>
        <div class="main-container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="bg-gray text-light footer-long">
            <div class="container">
                <div class="row">
                    <a class="text" asp-area="" asp-controller="Home" asp-action="Index" id="logo-text">ABM</a>
                    <!--end of col-->
                </div>
                <!--end of row-->
            </div>
            <!--end of container-->
        </footer>
        <script src="~/js/jquery.min.js"></script>
        <script src="~/js/bootstrap.js"></script>
        <script src="~/js/theme.js"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>